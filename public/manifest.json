{
  "manifest_version": 3,
  "name": "OrigamiVault QR Scanner",
  "version": "1.0.0",
  "description": "Auto-scan images on web pages to detect QR codes. Inspired by OrigamiVault encrypted paper storage.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_title": "OrigamiVault QR Scanner"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
